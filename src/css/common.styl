@font-face {
    font-family: 'Love';
    src: url('../fonts/Love-Regular.ttf') format('truetype');
    font-weight: normal;
    font-style: normal;
}

@font-face {
    font-family: 'GT America Compressed';
    src: url('../fonts/GTAmerica-CompressedRegular.ttf') format('truetype');
    font-weight: normal;
    font-style: normal;
}

html, body {
    height: 100%;
    width: 100%;
    font-size: 100%;
    font-family: 'GT America Compressed';
    font-weight: lighter;
    background-color: #262626;
}

html, body {
  margin: 0;
  padding: 0;
}

html {
  overflow: hidden;
}

:root {
  --app-height: 100%;
}

html {
  overflow: hidden;
}

html,body {
  overflow: hidden;
  user-select: none;
  * {
    -webkit-tap-highlight-color: rgba(0,0,0,0);
    -webkit-tap-highlight-color: transparent;
  }
}

body {
  padding: 0;
  margin: 0;
  height: 100vh;
  width: 100%;
  position: fixed;
  @media not all and (hover:hover) {
    height: var(--app-height);
  }
}

h1{
  font-family: 'Love';
  color: #A60303;
  font-weight: lighter;
}
h2{
  font-family: 'Love';
  color: #FFFFFF;
  font-weight: lighter;
  font-size: 2em;
  margin: 4%;
}

h3, a{
  margin: auto;
  margin-top: 1%;
  margin-bottom: 1%;
  color: #ffffff;
  font-size: 2em;
  font-weight: lighter;
}

ul {
  list-style-type: none;
  margin: 0;
  padding: 0;
  overflow: hidden;
  margin: 0;
  padding-top: 0;
  max-width: 60%
}

li{
  display: block;
  text-align: center;
  padding: 16px;
  text-decoration: none;
  float: left;
  margin: 0;
  padding-top: 0;
}

.main-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.main-canvas {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

#canvas-overlay {
  color: white;
	position: absolute;
	top: 0%;
  height: 100%;
	width: 100%;
	text-align: center;
	z-index: 1;
	display:block;

}

#introScreen{
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  }

#introTitle{
  font-size: 16em;
  text-shadow: 0px 0px 15px  #A60303;
  margin: 10px;
  }

.introSubTitle{
  font-size: 1.6em;
  margin: 10px;
  }

#introDescription{
  text-transform: uppercase;
  width: 40%
  font-size: 1.6em;
  margin: 10px;
  font-weight: lighter;
  }

#movieData{
  position: absolute;
  width: 100%;
  height: 50%;
  flex-direction: column;
  align-items: center;
  justify-content: center;}

#title{
  text-shadow: 0px 0px 15px  #A60303;
  font-weight: bold;
  font-size: 10em;
  margin-top: 0%;
  margin-bottom: 1px;
}
#subTitle {
  margin: 0px;
}

#synopsis {
  width: 50%
  }

#infos {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-transform: uppercase;
  }